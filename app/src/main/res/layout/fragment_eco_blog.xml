<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.EcoBlogFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/name_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="center"
            android:text="Hi, Denna"
            android:textSize="30sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_user"
            android:text=" 780 Points"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_baseline_local_florist_24"
            android:background="#37461e"
            android:textColor="#858e75" />

        <TextView
            android:id="@+id/ovo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_user"
            android:text=" OVO 900.000"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_baseline_monetization_on_24"
            android:background="#6b53ad"
            android:textColor="#858e75"/>

        <Button
            android:id="@+id/like"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/ovo"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_baseline_favorite_24"
            android:background="@null"
            android:layout_alignRight="@id/search"
            android:layout_marginRight="120dp"
            android:scaleY="1.5"
            android:scaleX="1.5"/>

        <Button
            android:id="@+id/message"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/ovo"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_baseline_message_24"
            android:background="@null"
            android:layout_alignRight="@id/like"
            android:layout_marginRight="70dp"
            android:scaleY="1.5"
            android:scaleX="1.5"/>

        <Button
            android:id="@+id/notif"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/ovo"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/ic_baseline_notifications_active_24"
            android:background="@null"
            android:layout_alignRight="@id/message"
            android:layout_marginRight="20dp"
            android:scaleY="1.5"
            android:scaleX="1.5" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/search"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@id/points"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:background="#f5f1de"
            app:boxStrokeWidth="0dp"
            app:startIconContentDescription="Heading">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="I am looking for .."
                android:drawableRight="@drawable/ic_baseline_search_24"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <ScrollView
            android:layout_below="@id/search"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/green"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/instagram"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="I n s t a g r a m"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/putih"/>

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@color/putih"/>
                    <ImageView

                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@color/putih"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="E c o  B l o g"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"/>
                    <TextView
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Share your gree life experience to the community!"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/photo1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:drawableTop="@drawable/ic_baseline_brightness_1_24"/>
                        <TextView
                            android:id="@+id/photo1_text"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/photo1"
                            android:text="perjuangan bulan pertama  mengaplikasikan 'zero waste lifestyle'"
                            android:layout_marginLeft="10dp"
                            android:textSize="10dp"/>

                        <TextView
                            android:id="@+id/photo1_text1"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/photo1"
                            android:layout_below="@id/photo1_text"
                            android:text="Zulaikha"
                            android:layout_marginLeft="10dp"
                            android:textSize="12dp"/>
                        <TextView
                            android:id="@+id/photo1_text2"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/photo1"
                            android:layout_below="@id/photo1_text1"
                            android:text="More..."
                            android:layout_marginLeft="10dp"
                            android:textSize="12dp"
                            android:layout_marginTop="10dp"/>

                        <Button
                            android:id="@+id/photo2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_toLeftOf="@id/photo2_text"
                            android:layout_marginRight="10dp"
                            android:drawableTop="@drawable/ic_baseline_brightness_1_24"/>
                        <TextView
                            android:id="@+id/photo2_text"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="sulit yang menyenangkan"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:textSize="10dp"/>
                        <TextView
                            android:id="@+id/photo2_text2"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/photo2_text"
                            android:text="Christian"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:textSize="12dp"/>
                        <TextView
                            android:id="@+id/photo2_text3"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/photo2"
                            android:layout_below="@id/photo2_text2"
                            android:text="More..."
                            android:textSize="12dp"
                            android:layout_marginTop="10dp" />

                    </RelativeLayout>


                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P r o d u c t  R e c o m e n d a t i o n"
                    android:layout_marginLeft="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">
                   <RelativeLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">
                           <Button
                               android:id="@+id/image_product"
                               android:layout_width="180dp"
                               android:layout_height="150dp"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:text="Packaging oxo-biodegradble (ECL-510)" />
                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:orientation="horizontal">
                               <TextView
                                   android:id="@+id/price2"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:text="Rp.112.000"
                                   android:layout_alignParentLeft="true"/>
                               <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:text="100 pcs"
                                   android:layout_alignParentRight="true"/>
                           </RelativeLayout>
                       </LinearLayout>

                   </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <Button
                                android:id="@+id/image_product2"
                                android:layout_width="180dp"
                                android:layout_height="150dp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Packaging oxo-biodegradble (EBL-500)" />
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/price"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Rp.112.000"
                                    android:layout_alignParentLeft="true"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="100 pcs"
                                    android:layout_alignParentRight="true"/>
                            </RelativeLayout>
                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>



            </LinearLayout>

        </ScrollView>



    </RelativeLayout>

</FrameLayout>